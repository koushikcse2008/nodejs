<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mt-3 mb-3 text-danger fw-bold">Registration Form</h2>
                    <form action="/register" method="POST" class="form-controll">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <div class="row">                
                        <div class="col-lg-6">
                            <label for="fname">First Name:</label>
                            <input type="text" id="fname" name="fname" class="form-control mb-3" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="lname">Last Name:</label>
                            <input type="text" id="lname" name="lname" class="form-control mb-3" required>
                        </div>
                    </div>

                    <div class="row">                
                        <div class="col-lg-6">
                            <label for="email">Email Address:</label>
                            <input type="email" id="email" name="email" class="form-control mb-3" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="phone">Contact Number:</label>
                            <input type="text" id="phone" name="phone" class="form-control mb-3" required>
                        </div>
                    </div>

                    <div class="row">                
                        <div class="col-lg-6">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control mb-3" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control mb-3" required>
                        </div>
                    </div>

                    <div class="row">                
                        <div class="col-lg-6">
                            <button type="submit" name="btnRegister" id="btnRegister" class="btn btn-success mt-3">Register</button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-lg-6 ps-5">
                <h2 class="mt-3 mb-3 text-success fw-bold">Listing Data</h2>
                <ul>
                    <% userData.forEach(function(user){ %>
                        <li>
                      First Name: <%=  user.fname %>, <br /> 
                      Last Name: <%=  user.lname %>,  <br />
                      Phone: <%=  user.phone %>,  <br />
                      Email: <%=  user.email %>,  <br />
                      Password: <%=  user.password %>
                      </li>
                    <% }); %>
                </ul>
            </div>
        </div>
        
    </div>
</body>
</html>
